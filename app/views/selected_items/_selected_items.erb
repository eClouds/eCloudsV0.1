<table id="tableItems" class="table table-striped">
      <thead>
        <tr>
             <th title="Value of the Input in the Application">Item Value</th>
             <th title="Name that is presented to the Users">Item Name</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td> <%= text_field 'input_item_name-0', nil, style: 'width:100%;'   %> </td>
          <td> <%= text_field 'input_item_value-0', nil, style:  'width:100%;'   %> </td>
        </tr>
      </tbody>
</table>
<div class="field">
  <%= tag "input", {"class" => "btn-success", "type" => "button", "value" => "Add Row", "onclick" => "add_display_new_item_inputs('tableItems')" } %>
  <%= tag "input", {"class" => "btn-danger", "type" => "button", "value" => "Del Row", "onclick" => "remove_display_new_item_inputs('tableItems')" } %>
</div>


